<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="rs.ac.bg.etf.certificate509.x509.MainMenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_pair"
        android:id="@+id/keyPair"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/importExport"
        android:layout_alignEnd="@+id/importExport"
        android:layout_alignLeft="@+id/importExport"
        android:layout_alignStart="@+id/importExport"
        android:background="@drawable/roundbutton"
        android:textColor="#FFFFFF"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/import_export"
        android:id="@+id/importExport"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/keyPair"
        android:layout_alignLeft="@+id/showDetails"
        android:layout_alignStart="@+id/showDetails"
        android:layout_alignRight="@+id/showDetails"
        android:layout_alignEnd="@+id/showDetails"
        android:background="@drawable/roundbutton"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_details"
        android:id="@+id/showDetails"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/importExport"
        android:background="@drawable/roundbutton"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_certificate"
        android:id="@+id/signCertificate"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/showDetails"
        android:layout_alignLeft="@+id/showDetails"
        android:layout_alignStart="@+id/showDetails"
        android:layout_alignRight="@+id/showDetails"
        android:layout_alignEnd="@+id/showDetails"
        android:background="@drawable/roundbutton"
        android:textColor="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/export_signed"
        android:id="@+id/exportSigned"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/signCertificate"
        android:layout_alignLeft="@+id/importExport"
        android:layout_alignStart="@+id/importExport"
        android:layout_alignRight="@+id/signCertificate"
        android:layout_alignEnd="@+id/signCertificate"
        android:background="@drawable/roundbutton"
        android:textColor="#FFFFFF"/>
</RelativeLayout>
